<%= form_for(user) do |f| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="form-group">
      <%= f.label :first_name, nil, :class => "col-sm-2 control-label" %>
      <%= f.text_field :first_name, autofocus: true, :class => "col-sm-8" %>
    </div>
  </div>

  <div class="row">
    <div class="form-group">
      <%= f.label :last_name, nil, :class => "col-sm-2 control-label" %>
      <%= f.text_field :last_name, autofocus: true, :class => "col-sm-8" %>
    </div>
  </div>

  <div class="row">
    <div class="form-group">
      <%= f.label :email, nil, :class => "col-sm-2 control-label" %>
      <%= f.email_field :email, autofocus: true, :class => "col-sm-8" %>
    </div>
  </div>

  <div class="row">
    <div class="form-group">
      <%= f.label :password, nil, :class => "col-sm-2 control-label" %>
      <%= f.password_field :password, autocomplete: "off", autofocus: true, :class => "col-sm-8" %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit :class => "btn btn-primary" %>
  </div>
<% end %>
