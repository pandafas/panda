<div class="container-fluid" id="signin">
  <div class="row">
    <div class="form-group">
      <div class="col-sm-offset-5 col-sm-7">
        <h1>Sign up</h1>
      </div>
      <%= form_for(resource, :html => {class: "form-horizontal", id: "signup"},url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

    <div class="form-group">
      <%= f.label :email, nil, :class => "col-sm-2 control-label" %>
      <%= f.email_field :email, autofocus: true, :class => "col-sm-8" %>
    </div>

    <div class="form-group">
      <%= f.label :password, nil, :class => "col-sm-2 control-label" %>
      <% if @minimum_password_length %>
      <% end %>
      <%= f.password_field :password, autocomplete: "off", :class => "col-sm-8" %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
    </div>
    

  <div class="form-group">
    <%= f.label :password_confirmation, nil, :class => "col-sm-2 control-label" %>
    <%= f.password_field :password_confirmation, autocomplete: "off", :class => "col-sm-8" %>
  </div>

  <div class="form-group">
    <div class="col-sm-2-offset-2 col-sm-10" id="sup">
    <%= f.submit "Sign up", :class => "btn btn-default" %>
    <% end %>
    </div>
  </div>
</div>
</div>

<div class="row">
  <div class="col-sm-2-offset-2 col-sm-10" id="links">
    <%= render "devise/shared/links" %>
  </div>
</div>
</div>
