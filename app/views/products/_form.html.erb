<%= form_for(product) do |f| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="form-group">
    <%= f.label :name, nil, :class => "col-sm-2 control-label" %>
    <%= f.text_field :name, autofocus: true, :class => "col-sm-8" %>
    </div>
  </div>

  <div class="row">
    <div class="form-group">
    <%= f.label :description, nil, :class => "col-sm-2 control-label" %>
    <%= f.text_area :description, autofocus: true, :class => "col-sm-8" %>
    </div>
  </div>
  <br>

  <div class="row">
    <div class="form-group">
    <%= f.label :image_url, nil, :class => "col-sm-2 control-label" %>
    <%= f.text_field :image_url, autofocus: true, :class => "col-sm-8" %>
    </div>
  </div>

  <div class="row">
    <div class="form-group">
    <%= f.label :colour, nil, :class => "col-sm-2 control-label" %>
    <%= f.text_field :colour, autofocus: true, :class => "col-sm-8" %>
    </div>
  </div>

  <div class="row">
    <div class="form-group">
    <%= f.label :price, nil, :class => "col-sm-2 control-label" %>
    <%= f.text_field :price, autofocus: true, :class => "col-sm-8" %>
    </div>
  </div>

  <div class="row">
    <%= f.label :category, :class => "col-sm-2" %>
    <%= f.select :category, [["Select Option", ""], "Signs", "Railings", "Words", "Wood Rounds"], selected: (nil || product.category) %>
  </div>

  <div class="row">
    <div class="col-sm-offset-4 col-md-offset-4 col-sm-8 col-md-8">
      <div class="actions">
    <%= f.submit :class => "btn btn-primary" %>
      </div>
    <% end %>
    </div>
  </div>


