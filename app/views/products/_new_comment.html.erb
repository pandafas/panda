<% if signed_in? %>
	<h1>Add a review: </h1>
	<%= form_for([@product, @product.comments.build]) do |f| %>
		<p>
			<%= f.label :body, "Comments:" %><br>
			<%= f.text_area :body, :class => "form-control" %>
		</p>
		<p>
			<div class="rating"></div>
		</p>
		<p>
			<%= f.submit "Submit" %>
		</p>
	<% end %>
<% end %>
